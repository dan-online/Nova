{
  "name": "nova-node",
  "version": "1.0.0",
  "description": "",
  "main": "src/nova.js",
  "scripts": {
    "test": "mocha src/tests",
    "package": "pkg ./src/nova.js --out-path lib --targets linux,macos,win && echo \"Successfully compiled\""
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": "build/**/*",
    "release": "release-it"
  },
  "author": "DanCodes <dan@dancodes.online>",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^6.2.2",
    "pkg": "^4.4.0",
    "release-it": "^12.4.3"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "nova",
        "aliases": [
          "Nova",
          "nova"
        ],
        "extensions": [
          ".ns"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nova",
        "scopeName": "source.ns",
        "path": "./syntaxes/nova.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "debug": "^4.1.1",
    "file-system": "^2.2.2"
  }
}
